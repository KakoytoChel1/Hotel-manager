                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Bottom" 
                                    Margin="0,0,0,0"
                                    Command="{Binding DataContext.RemoveFloorCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
